#!/usr/bin/env ruby

require "bundler/setup"
require "mysql_getlock"
require 'logger'

if ARGV[0] == 'exit!'
  trap('INT') do
    exit!
  end
end

mysql2 = Mysql2::Client.new
mutex = MysqlGetlock.new(
  mysql2: mysql2, key: 'mysql_getlock2', logger: Logger.new(STDOUT)
)
mutex.synchronize do
  loop do
    puts mutex.locked?
    sleep 1
  end
end
